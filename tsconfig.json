{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "noEmit": true,

    "strict": true,
    "skipLibCheck": true,

    "baseUrl": "./src",
    "paths": {
      "@common/*": ["common/*"],
      "@alkopoly/*": ["alkopoly/*"]
    }
  },
  "include": ["src"]
}
